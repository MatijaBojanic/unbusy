                    {
                        "name": "busLine",
                        "in": "path",
                        "description": "ID of the bus line to retrieve",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/BusLine"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Bus line not found"
                    }
                }
            }
        },
