                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/BusLineCollection"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Bus Lines"
                ],
                "summary": "Store new bus line",
                "description": "Returns the newly created bus line",
                "operationId": "storeBusLine",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/BusLineCreate"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/BusLine"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UnauthenticatedError"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Unprocessable Entity",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ValidationError"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/bus-lines/{busLine}": {
            "delete": {
                "tags": [
                    "Bus Lines"
                ],
                "summary": "Delete a bus line",
                "description": "Delete a specific bus line by its ID",
                "operationId": "deleteBusLine",
                "parameters": [
                    {
                        "name": "busLine",
                        "in": "path",
                        "description": "ID of the bus line to delete",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64",
                            "example": 1
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Bus line deleted successfully"
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UnauthenticatedError"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Bus line not found"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
